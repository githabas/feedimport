{% extends 'base.html.twig' %}

{% if form.vars.value.id %}
    {% set action = 'edit' %}
{% else %}
    {% set action = 'new' %}
{% endif %}

{% block title %}{{ parent() }} - {{ 'Imported - ' ~ action }}{% endblock %}
{% block content_header %}{% endblock content_header %}


{% block main %}
    <ul class="nav nav-pills">
        <li>
            <a href="{{ path('homepage') }}">
                <span class="alert-info">&nbsp;<i class="fa fa-level-up fa-lg"></i>&nbsp;</span>
                Back to list
            </a>
        </li>
    </ul>

    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ 'Imported - ' ~ action }}</h3>
            </div>
            {% form_theme form 'form/bootstrap_3_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock main %}
